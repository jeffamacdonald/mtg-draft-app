<% if @draft.status == DraftStatus.pending %>
  <%= render "pending" %>
<% else %>
  <%= render(DisplayCardComponent.new(width: :sm, classes: "mb-2")) do %>
    <p class="h1"><%= @draft.name %></p>
  <% end %>
  <%= render(PickListComponent.new(@draft)) %>
  <%= render(CubeFiltersComponent.new(url: draft_path(@draft), filter_params: filter_params)) %>
  <%= render(CubeCardListComponent.new(cube_cards: @cube_cards, context: MagicCardContext.for_active_draft(@draft.draft_participants.find_by(user: current_user)))) %>
<% end %>
