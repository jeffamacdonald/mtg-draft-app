<h1 class="page__title">New Draft</h1>
<%= form_with(model: Draft.new, local: true) do |f| %>
  <div class="pt-3 row text-center">
    <div class="col-12">
      <%= f.hidden_field :user, value: current_user %>
      <%= f.hidden_field :status, value: "PENDING" %>
      <%= f.label :name, "Draft Name", class: "form__field_label" %>
      <%= f.text_field :name, class: "form__field_input" %>
    </div>
    <div class="col-12">
      <%= f.label :rounds, "Number of Rounds", class: "form__field_label" %>
      <%= f.number_field :rounds, class: "form__field_input" %>
    </div>
    <div class="col-12">
      <%= f.label :cube, "Cube", class: "form__field_label" %>
      <%= f.collection_select :cube, Cube.where(user: current_user).order(:name), :id, :name, {}, {class: "form__field_input"} %>
    </div>
  </div>

  <div class="row text-center">
    <div class="col-12">
      <%= f.submit "Create", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
