<%= render(DisplayCardComponent.new(width: :xl, classes: "mb-2")) do %>
  <div class="card-header">PICKS</div>
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <% draft.draft_participants.ordered.each do |participant| %>
            <th scope="col" class=<%= active_participant_class(participant) %>><%= participant.display_name %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% draft.rounds.times do |idx| %>
          <tr>
            <% draft.draft_participants.ordered.each do |participant| %>
              <td>
                <%= pick_for_round_and_participant(idx + 1, participant)&.name || "--" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
