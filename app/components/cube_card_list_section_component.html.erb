<% if cards.present? %>
  <%= render(DisplayCardComponent.new(width: :xl)) do %>
    <div class="card-header"><%= title %></div>
    <div class="d-flex flex-row flex-wrap">
      <% cards.each do |cube_card| %>
        <%= render(MagicCardComponent.new(cube_card: cube_card)) %>
      <% end %>
    </div>
  <% end %>
<% end %>